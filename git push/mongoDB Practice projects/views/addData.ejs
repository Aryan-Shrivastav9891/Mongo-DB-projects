<h2>Add Student Information</h2>
<form action="/add" method="post">
  <div class="mb-3">
    <label for="Name" class="form-label">Full Name</label>
    <input
      type="text"
      class="form-control"
      id="Name"
      name="name"
      aria-describedby="nameHelp"
      required
    />
  </div>
  <div class="mb-3">
    <label for="exampleInputAge" class="form-label">Your Age</label>
    <input
      type="number"
      class="form-control"
      id="exampleInputAge"
      name="age"
      required
    />
  </div>
  <div class="mb-3">
    <label class="form-check-label" for="exampleEmail">Your Email</label>
    <input
      type="email"
      class="form-control"
      id="exampleEmail"
      name="email"
      required
    />
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
